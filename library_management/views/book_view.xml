<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View Definition -->
    <record id="view_book_tree" model="ir.ui.view">
        <field name="name">book.tree</field>
        <field name="model">book</field>
        <field name="arch" type="xml">
            <tree string="Books">
                <field name="name"/>
                <field name="author"/>
                <field name="publication_date"/>
            </tree>
        </field>
    </record>

    <!-- Action Definition -->
    <record id="action_book_management" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">book</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create, edit, and manage your books efficiently.
            </p>
        </field>
    </record>
</odoo>
